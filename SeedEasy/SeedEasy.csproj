<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net8.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <Version>1.0.0</Version>
        <Description>Seed your data easily</Description>
        <PackageReadmeFile>README.md</PackageReadmeFile>
        <PackageTags>Seed ; EF Crore ; C# ; Database ; </PackageTags>
        <PackageLicenseFile>LICENCE</PackageLicenseFile>
        <RepositoryUrl>https://github.com/M0BIN-V/SeedEasy</RepositoryUrl>
    </PropertyGroup>

    <ItemGroup>
      <None Include="..\LICENCE">
        <Pack>True</Pack>
        <PackagePath>\</PackagePath>
      </None>
      <None Include="..\README.md">
        <Pack>True</Pack>
        <PackagePath>\</PackagePath>
      </None>
    </ItemGroup>

    <ItemGroup>
      <PackageReference Include="Microsoft.EntityFrameworkCore" Version="9.0.0" />
    </ItemGroup>

</Project>
